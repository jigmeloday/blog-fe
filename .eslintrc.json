{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "semi": "error",
    "no-unused-vars": "error",
    "space-before-function-paren": ["error", "always"],
    "indent": ["error", 1],
    "max-len": [2, { "code": 120, "ignoreTrailingComments": true, "ignoreComments": true, "ignoreUrls": true }],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}
